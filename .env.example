# =============================================================================
# PNG eGP System - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only, NEVER expose in browser)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Application Configuration (Optional)
# =============================================================================

# Application URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=wss://your-project-id.supabase.co/realtime/v1

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable demo mode with mock data (set to 'false' for production)
NEXT_PUBLIC_DEMO_MODE=true

# Require authentication for all routes (set to 'true' for production)
NEXT_PUBLIC_REQUIRE_AUTH=false
